<WelcomeWindow>:
    canvas.before:
        Rectangle:
            size : self.size
            pos : self.pos
            source : "Heading.jpg"
    FloatLayout:
        size : root.width,root.height
        canvas.before:
            Color :
                rgba : 0,0,0,0.5
            Rectangle:
                size : self.size
                pos : self.pos
        Label :
            markup : True
            size_hint : .8,.1
            pos_hint : {"center_x":.5,"center_y":.92}
            font_size : 60
            text : "[i][b] Heart Failure [/i][/b]"

        Button :
            size_hint : .2,.1
            pos_hint : {"center_x":.15,"center_y":.1}
            text : "Prediction Form"
            on_release : app.root.current = "FormScreen"
            background_color :0,.5,.9,1


        Button :
            size_hint : .2,.1
            text : "File upload"
            pos_hint : {"center_x":.15,"center_y":.23}
            background_color :0,.5,.9,1
            on_release : app.root.current = "FileUploadScreen"

        Button :
            size_hint : .2,.1
            text : "Machine Learning"
            pos_hint : {"center_x":.85,"center_y":.73}
            background_color :0,.5,.9,1
            on_release : root.html_file_display()
